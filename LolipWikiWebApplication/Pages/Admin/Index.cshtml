@page
@using LolipWikiWebApplication.DataAccess.Models
@model LolipWikiWebApplication.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Edit Application Configuration";
}

<form id="pageAdminIndex" asp-page="Index">
    <div class="row mb-3">
        <label asp-for="ReadControlType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ReadControlType" asp-items="Html.GetEnumSelectList<AccessControlType>()"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="WriteControlType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="WriteControlType" asp-items="Html.GetEnumSelectList<AccessControlType>()"></select>
        </div>
    </div>


    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-primary active" href="@(Url.Page("/Index"))">Cancel</a>
    </div>
</form>