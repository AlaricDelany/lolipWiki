@model LolipWikiWebApplication.BusinessLogic.Model.UserManagement.IUser

<a class="navbar-brand" asp-area="" asp-page="/Index">
    <img src="~/images/Sticker-JasperLove.png" height="50"/>
    lolipWiki
</a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownArticle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Article
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownArticle">
                @if (Model != null && Model.IsArticleManager)
                {
                    <li>
                        <a class="dropdown-item text-dark" asp-area="" asp-page="/Article/List">Article List</a>
                    </li>
                }
                <li>
                    <a class="dropdown-item text-dark" asp-area="" asp-page="/Article/Index">Articles</a>
                </li>
            </ul>
        </li>

        @if (Model != null && Model.IsUserManager)
        {
            <li class="nav-item dropdown">
                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownAdministration" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Administration
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdministration">
                    @if (Model.IsUserManager)
                    {
                        <li>
                            <a class="dropdown-item text-dark" asp-area="" asp-page="/User/List">Users</a>
                        </li>
                    }
                    @if (Model.IsAdmin)
                    {
                        <li>
                            <a class="dropdown-item text-dark" asp-area="" asp-page="/Admin/Index">Configuration</a>
                        </li>
                    }
                </ul>
            </li>
        }
        @if (Model != null && Model.IsAdmin)
        {
            <li class="nav-item dropdown">
                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownDebug" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Debug
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownDebug">

                </ul>
            </li>
        }

    </ul>
    <div>
        <img src="@Model?.ProfilePicturePath" alt="@Model?.ProfilePicturePath" height="35"/>
        <span>@Model?.DisplayName</span>
    </div>
</div>