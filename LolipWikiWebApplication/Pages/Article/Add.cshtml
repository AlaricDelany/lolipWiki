@page
@model LolipWikiWebApplication.Pages.Article.AddArticleModel
@{
    ViewData["Title"] = "Add Article";
}
<form id="pageArticleAdd" asp-page="Add">
    <div class="row mb-3">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="@ModelState.GetCssClassesForFormControl(nameof(Model.Title))"/>
            <div class="invalid-feedback">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="TitleImage" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TitleImage" class="@ModelState.GetCssClassesForFormControl(nameof(Model.TitleImage))"/>
            <div class="invalid-feedback">
                <span asp-validation-for="TitleImage"></span>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <img id="TitleImagePreview" class="col-sm-2" src="" alt="Image Path seems broken, maybe check it">
    </div>
    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-primary active" href="@(Url.Page("List"))">Cancel</a>
    </div>

</form>

@section Scripts
{
    <script type="text/javascript">
        $(() => {
            function UpdatePreview() {
                $('img#TitleImagePreview').attr('src', $('input#TitleImage').val());
            }

            $('input#TitleImage').change(function() {
                UpdatePreview();
            });
            UpdatePreview();
        });
    </script>
}