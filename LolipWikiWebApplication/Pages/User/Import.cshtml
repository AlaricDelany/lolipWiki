@model LolipWikiWebApplication.PageModels.UserImportModel
@{
    ViewData["Title"] = "Import User";
}

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalImportUser">Import User</button>
<!-- Modal -->
<div class="modal fade" id="modalImportUser" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page="List" asp-page-handler="Import">

                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">@ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">TwitchUser Name</label>
                        <div class="col-sm-8">
                            <input asp-for="UserName" class="form-control"/>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="modalImportUserSaveBtn">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>